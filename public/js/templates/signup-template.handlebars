<div class="auth">
    <div class="auth__item auth__item_main">
        <div class="auth__title auth__title_main">Регистрация</div>
        <form id="form">
            <div class="auth__input">
                <div class="auth__help">Имя</div>
                <input class="input input__auth" placeholder="Илья" type="text"></div>
            <div class="auth__input">
                <div class="auth__help">Email</div>
                <input class="input input__auth" placeholder="ilya@mail.com" type="email"></div>
            <div class="auth__input">
                <div class="auth__help">Телефон</div>
                <input class="input input__auth" placeholder="+7 (999) 555-35-35" type="tel"></div>
            <div class="auth__input">
                <div class="auth__help">Пароль</div>
                <input class="input input__auth" placeholder="*******" type="password"></div>
            <div class="auth__input">
                <div class="auth__help">Повторите пароль</div>
                <input class="input input__auth" placeholder="*******" type="password"></div>
            <div class="auth__btn">
                <button class="btn btn_color_ok btn_size_large" type="submit">
                    <div class="btn__text btn__text_w">Зарегистриророваться</div>
                </button>
            </div>
        </form>
    </div>
    <div class="auth__item">
        <div class="auth__title">Вход</div>
        <div class="auth__text">Уже зарегистрированы?
            Войдите с существующим аккаунтом!
        </div>
        <div class="auth__btn">
            <button class="btn btn_color_w btn_size_middle" type="submit">
                <div class="btn__text btn__text_b">Войти</div>
            </button>
        </div>
    </div>
</div>