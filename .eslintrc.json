{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": "eslint:recommended",

    "parser": "babel-eslint",

    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2020,
        "ecmaFeatures": {
            "classPrivateMethods": true,
            "arrowFunctions": true
        },
        "babelOptions": {
            "configFile": "babel.config.js"
        }
    },
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": "warn",
        "indent": [
            "warn",
            4
        ]
    }
}